{
  "name": "EP3_BackEnd",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/DavidDemoen/HoGentProjectenII-2024-DavidDemoen-EP3-backend.git",
  "author": "DAVID DEMOEN <david.demoen@student.hogent.be>",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.1",
    "config": "^3.3.12",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "nodemon": "^3.1.4"
  },
  "nodemonConfig": {
    "signal": "SIGTERM",
    "ignore": [
      "node_modules/*",
      ".vscode/*"
    ],
    "delay": "80",
    "watch": [
      "config",
      "src",
      "index.js"
    ],
    "ext": "js,json",
    "legacyWatch": true,
    "exec": "node --inspect=0.0.0.0:9001 --trace-warnings src/index.js"
  },
  "scripts": {
    "start": "env-cmd nodemon"
  }
}
